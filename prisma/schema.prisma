generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String     @id @default(cuid())
  name           String?
  email          String     @unique
  emailVerified  DateTime?
  password       String?
  image          String?
  role           UserRole   @default(USER)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  accounts       Account[]
  bookingsAsUser Booking[]  @relation("bookingUser")
  djProfile      DJProfile?
  sessions       Session[]

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model EmailVerificationToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime

  @@index([email])
  @@index([token])
}

model DJProfile {
  id                String    @id @default(cuid())
  userId            String    @unique
  bio               String?
  genres            String[]  @default([])
  hourlyRate        Float
  experience        Int
  status            DJStatus  @default(PENDING)
  profileImage      String?
  portfolioUrl      String?
  credentials       String[]  @default([])
  instagram         String?
  twitter           String?
  website           String?
  phone             String?
  city              String?
  state             String?
  zipCode           String?
  latitude          Float?
  longitude         Float?
  radius            Int?
  verifiedAt        DateTime?
  verificationNotes String?
  rejectionReason   String?
  rating            Float     @default(0)
  totalBookings     Int       @default(0)
  totalReviews      Int       @default(0)
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  bookings          Booking[]
  user              User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  reviews           Review[]

  @@index([status])
  @@index([userId])
}

model Booking {
  id                 String        @id @default(cuid())
  userId             String
  djId               String
  eventDate          DateTime
  eventDuration      Int
  eventLocation      String
  eventType          String
  eventNotes         String?
  status             BookingStatus @default(PENDING)
  confirmedAt        DateTime?
  completedAt        DateTime?
  cancelledAt        DateTime?
  cancellationReason String?
  quotedPrice        Float?
  finalPrice         Float?
  contactEmail       String
  contactPhone       String
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  dj                 DJProfile     @relation(fields: [djId], references: [id], onDelete: Cascade)
  user               User          @relation("bookingUser", fields: [userId], references: [id], onDelete: Cascade)
  review             Review?

  @@index([userId])
  @@index([djId])
  @@index([status])
}

model Review {
  id        String    @id @default(cuid())
  bookingId String    @unique
  djId      String
  rating    Int
  comment   String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  booking   Booking   @relation(fields: [bookingId], references: [id], onDelete: Cascade)
  dj        DJProfile @relation(fields: [djId], references: [id], onDelete: Cascade)

  @@index([djId])
}

model AdminLog {
  id              String   @id @default(cuid())
  action          String
  targetDJId      String?
  targetBookingId String?
  notes           String?
  adminId         String
  createdAt       DateTime @default(now())

  @@index([adminId])
  @@index([createdAt])
}

enum UserRole {
  USER
  DJ
  ADMIN
}

enum DJStatus {
  PENDING
  VERIFIED
  REJECTED
  SUSPENDED
}

enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
}
